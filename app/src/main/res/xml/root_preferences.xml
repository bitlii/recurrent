<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="General">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/themePreference"
            android:entryValues="@array/themePreference"
            android:key="theme_pref"
            android:title="App Theme" />
    </PreferenceCategory>
    <PreferenceCategory android:title="About ">
        <Preference
            app:summary="Source code, terms and privacy policy can be found here."
            app:title="Github">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/github_link" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>